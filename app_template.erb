# production
server {
	listen   80 ;     		# listen for ipv4
	listen   [::]:80 ;		# listen for ipv6

	server_name <%= @hostname %>;

	access_log /var/log/<%= @hostname %>_production_access.log;
	error_log  /var/log/<%= @hostname %>_production_error.log;

	location / {
		root /opt/apps/production/<%= @app_name %>/public;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header Host $http_host;
		proxy_redirect off;

		# If you don't find the filename in the static files
		# Then request it from the thin server
		if (!-f $request_filename) {
			proxy_pass http://<%= @app_name %>.production;
			break;
		}
	}
}

