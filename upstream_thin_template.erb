upstream <%= @app_name %>.production {
	server unix:/var/run/sockets/thin.<%= @app_name %>.production.0.socket;
	server unix:/var/run/sockets/thin.<%= @app_name %>.production.1.socket;
	server unix:/var/run/sockets/thin.<%= @app_name %>.production.2.socket;
	server unix:/var/run/sockets/thin.<%= @app_name %>.production.3.socket;
	server unix:/var/run/sockets/thin.<%= @app_name %>.production.4.socket;
}
upstream <%= @app_name %>.staging {
	server unix:/var/run/sockets/thin.<%= @app_name %>.staging.0.socket;
}
upstream <%= @app_name %>.development {
	server unix:/var/run/sockets/thin.<%= @app_name %>.development.0.socket;
}
